{
  "name": "UptimeEmitter",
  "version": "0.1.0",
  "description": "ping-monitor desktop app",
  "author": "Qawemlilo Mlilo <qawemlilo@gmail.com>",
  "main": "app/main.js",
  "productName": "UptimeEmitter",
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build --mode=production --dest=./app/public && npm run mac",
    "lint": "vue-cli-service lint",
    "dev": "NODE_ENV=DEV vue-cli-service serve & sleep 15 && NODE_ENV=DEV electron .",
    "icons": "./node_modules/.bin/electron-icon-maker --input=$PWD/app/src/client/assets/icon.png --output=./public",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "start": "NODE_ENV=production electron .",
    "mac": "electron-builder -m"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dayjs": "^1.8.10",
    "electron-debug": "^2.1.0",
    "electron-log": "^3.0.1",
    "electron-settings": "^3.2.0",
    "express": "^4.16.4",
    "lodash": "^4.17.21",
    "nedb": "^1.8.0",
    "node-notifier": "^8.0.1",
    "ping-monitor": "^0.4.2",
    "vue": "^2.6.4",
    "vue-electron": "^1.0.6",
    "vue-router": "^3.0.2",
    "vuetify": "^1.5.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/preset-stage-2": "^7.0.0",
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-service": "^3.5.1",
    "css-loader": "^2.1.0",
    "electron": "^9.4.0",
    "electron-builder": "^20.39.0",
    "electron-icon-maker": "0.0.4",
    "style-loader": "^0.23.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-cli-plugin-vuetify": "^0.4.6",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.2.0"
  },
  "babel": {
    "presets": [
      "@vue/app",
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "require": "readable",
      "import": "readable",
      "process": "readable"
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "keywords": [
    "uptime",
    "monitor"
  ],
  "build": {
    "appId": "com.uptimeemitter.app",
    "productName": "UptimeEmitter",
    "asar": false,
    "directories": {
      "buildResources": "./app",
      "output": "build"
    },
    "files": [
      "**/*",
      "app/public/icons/png/128x128.png"
    ],
    "mac": {
      "target": "dmg",
      "icon": "app/public/icons/mac/icon.icns"
    }
  },
  "license": "MIT",
  "repository": "https://github.com/qawemlilo/uptime-emitter-desktop"
}
